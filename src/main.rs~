use axum::extract::State;
use axum::{Router, routing::get};
use sqlx::postgres::PgPoolOptions; // NEW - for database connection
use std::net::SocketAddr;
use std::sync::Arc;
use tracing_subscriber; // NEW - for sharing data between requests

#[tokio::main]
async fn main() {
    // Setup logging
    tracing_subscriber::fmt::init();

    tracing::info!("Starting Patient Management System");

    // Read .evn file
    dotenvy::dotenv().ok();

    let database_url =
        std::env::var("DATABASE_URL").expect("DATABASE_URL must be set in .env file");

    let pool = PgPoolOptions::new()
        .max_connections(5)
        .connect(&data_base_url)
        .await
        .expect("failed to connect to database");

    // Create a simple router with just one route
    let app = Router::new().route("/", get(hello_world));

    // Listen on localhost:3000
    let addr = SocketAddr::from(([127, 0, 0, 1], 3000));
    tracing::info!("üöÄ Server listening on http://{}", addr);

    let listener = tokio::net::TcpListener::bind(addr).await.unwrap();
    axum::serve(listener, app).await.unwrap();
}

